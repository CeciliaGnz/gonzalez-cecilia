    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.4.4",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "paypal-rest-sdk": "^1.8.1",
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0"
  }
}
