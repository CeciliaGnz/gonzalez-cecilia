  "description": "Proyecto con backend en Node.js/Express y frontend con Tailwind CSS",
  "main": "backend/src/index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./frontend/src/css/input.css -o ./frontend/src/css/output.css --watch",
